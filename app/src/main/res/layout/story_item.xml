<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/light_gray"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0dp"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="14dp">

        <ImageView
            android:id="@+id/img_story_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_item_story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Заказа №345674"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/light_black"
            app:layout_constraintTop_toTopOf="@id/img_story_item_container"
            app:layout_constraintStart_toEndOf="@id/img_story_item_container"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="12:46"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="@id/img_story_item_container"
            app:layout_constraintStart_toEndOf="@id/img_story_item_container"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="340 c"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/main_green"
            app:layout_constraintTop_toTopOf="@id/img_story_item_container"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>